pipeline {
    agent {
        docker {
            image 'maven:3.8.6-eclipse-temurin-17'
            args '--user root -v /var/run/docker.sock:/var/run/docker.sock -v /usr/bin/docker:/usr/bin/docker'
        }
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/shafath1216/springboot-app.git'
            }
        }

        stage('Build and Test') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('Static Code Analysis') {
            steps {
                withCredentials([string(credentialsId: 'sonarqube', variable: 'SONAR_AUTH_TOKEN')]) {
                    sh "mvn org.sonarsource.scanner.maven:sonar-maven-plugin:3.9.1.2184:sonar \
                        -Dsonar.login=$SONAR_AUTH_TOKEN \
                        -Dsonar.host.url=http://52.90.147.215:9000"
                }
            }
        }

        stage('Build and Push Docker Image') {
            environment {
                DOCKER_IMAGE = "shafath061/springboot-app:${BUILD_NUMBER}"
            }
            steps {
                withCredentials([usernamePassword(credentialsId: 'docker-cred', passwordVariable: 'DOCKER_PASSWORD', usernameVariable: 'DOCKER_USERNAME')]) {
                    sh """
                        docker build -t ${DOCKER_IMAGE} .
                        echo "${DOCKER_PASSWORD}" | docker login -u "${DOCKER_USERNAME}" --password-stdin
                        docker push ${DOCKER_IMAGE}
                    """
                }
            }
        }

        stage('Update Deployment File') {
            steps {
                withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {
                    sh """
                        git config --global --add safe.directory '*'
                        git config user.email "shafath061@gmail.com"
                        git config user.name "shafath1216"
                        
                        sed -i "s/replaceImageTag/${BUILD_NUMBER}/g" manifests/deployment.yml
                        
                        git add manifests/deployment.yml
                        git commit -m "Update image to version ${BUILD_NUMBER}" || echo "No changes"
                        git push https://${GITHUB_TOKEN}@github.com/shafath1216/springboot-app.git HEAD:main
                    """
                }
            }
        }
    }
    
    post {
        always {
            sh 'chown -R 1000:1000 .'
        }
    }
}
